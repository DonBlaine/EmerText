<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emertext.EmergencyContactDetails">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_kin_details"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emergency_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"

            android:background="#acacac"
            android:ems="10"
            android:hint="@string/contact_name"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:tag="@string/emergency_contact_name_key"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/emergency_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#acacac"
            android:ems="10"
            android:hint="@string/emergency_contact_phone_number"
            android:inputType="phone"
            android:padding="5dp"
            android:tag="@string/emergency_contact_number_key"
            android:textColor="#000000" />

        <Button
            android:id="@+id/fetch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:drawableLeft="@drawable/contacts_icon"
            android:drawablePadding="10dp"
            android:elevation="0dp"
            android:text="@string/from_contacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emergency_services_number_textview"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/emergency_service_number_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#acacac"
            android:ems="10"
            android:text= "@string/default_emergency_number"
            android:inputType="phone"
            android:padding="5dp"
            android:tag="@string/emergency_service_number_key"
            android:textColor="#000000" />
    </LinearLayout>

</FrameLayout>
