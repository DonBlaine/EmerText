<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.don.emertext.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maintext"
        android:text="@string/helloworld"
         />

    <Button
        android:text="@string/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="enterDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:text="Go to fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterFragment"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/unsupported_title"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/unsupported_title">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/yellow_warning"
                android:id="@+id/network_icon"
                android:layout_weight="1"
                android:layout_below="@+id/net_status_text"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Network Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/net_status_text"
                android:layout_weight="1"
                android:layout_below="@+id/unsupported_title"
                android:layout_toEndOf="@+id/unsupported_title"
                android:layout_marginStart="33dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/yellow_warning"
                android:id="@+id/sim_icon"
                android:layout_weight="1"
                android:layout_below="@+id/net_status_text"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="SIM Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sim_status_text"
                android:layout_weight="1"
                android:layout_below="@+id/unsupported_title"
                android:layout_toEndOf="@+id/unsupported_title"
                android:layout_marginStart="33dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
