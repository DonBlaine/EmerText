<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_text_speech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.don.emertext.TextSpeech"
    android:background="#cacaca">


    <LinearLayout
        android:id="@+id/buttonHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:dividerPadding="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttonRow1"
            android:weightSum="4"
            >


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:id="@+id/button11"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/helpme"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button12"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/thumbmedicine"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button13"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/phone" />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button14"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/taxi" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttonRow2"
            android:weightSum="4"
            >


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:id="@+id/button21"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/thumbsup"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button22"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/sitdown"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button23"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/water" />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button24"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/picture_btn"
                app:srcCompat="@drawable/thumbsdown"
                />

        </LinearLayout>


    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:imeOptions="actionDone"
        android:background="@drawable/round_view"
        android:singleLine="true"
        android:hint="Start typing"
        android:textColor="@color/black"
        android:textColorHint="#0000ff"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawButton"
        android:layout_below="@+id/editText"
        android:isScrollContainer="false"
        android:id="@+id/scroller1"
        >
    <LinearLayout
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/helperTextMessage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        />
    </ScrollView>

    <Button
        android:id="@+id/drawButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show where you are hurt"
        android:layout_above="@+id/buttonHolder"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/picture_btn"/>

</RelativeLayout>

