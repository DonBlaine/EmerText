<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_speech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.don.emertext.TextSpeech">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/topBar"
        android:layout_alignParentTop="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/agree"
            android:text="Agree"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/decline"
            android:text="Decline"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayScreen"
        android:orientation="vertical"
        android:layout_below="@id/topBar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saidMessage"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/buttonHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:dividerPadding="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttonRow1"
            android:weightSum="4"
            >


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:id="@+id/button11"
                style="?android:buttonBarButtonStyle"
                android:background="@drawable/watertap"
                android:src="@drawable/round_view"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button12"
                style="?android:buttonBarButtonStyle"
                android:background="@drawable/sprinklewater"
                android:src="@drawable/round_view"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button13"
                style="?android:buttonBarButtonStyle"
                android:background="@drawable/backsupport"
                android:src="@drawable/round_view" />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button14"
                style="?android:buttonBarButtonStyle"
                android:background="@drawable/warm"
                android:src="@drawable/round_view"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/buttonDisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selectable options"
        android:layout_above="@id/buttonHolder"
        />

    <Button
        android:id="@+id/drawButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show where you are hurt"
        android:layout_above="@id/buttonDisplayText" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editText"
        android:layout_below="@+id/displayScreen"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:imeOptions="actionDone"
        android:background="@drawable/round_view"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/editText"
        android:text="helper response"
        android:layout_above="@id/editText"
        />


    <ScrollView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/helperTextMessage"
        android:layout_above="@+id/drawButton"
        android:layout_below="@+id/editText"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/textexchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

