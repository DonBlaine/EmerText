<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_speech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.don.emertext.TextSpeech"
    android:background="#cacaca"
    >


    <LinearLayout
        android:id="@+id/buttonHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:dividerPadding="4dp"
        android:weightSum="4"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:id="@+id/button11"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            style="?android:buttonBarButtonStyle"
            app:srcCompat="@drawable/watertap"
            android:background="@drawable/picture_btn"
            android:contentDescription="picture1"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button12"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            style="?android:buttonBarButtonStyle"
            app:srcCompat="@drawable/callcab"
            android:background="@drawable/picture_btn"
            android:contentDescription="picture2"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button13"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            style="?android:buttonBarButtonStyle"
            app:srcCompat="@drawable/medbag"
            android:background="@drawable/picture_btn"
            android:contentDescription="picture3" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button14"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            style="?android:buttonBarButtonStyle"
            app:srcCompat="@drawable/help"
            android:background="@drawable/picture_btn"
            android:contentDescription="picture4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/topBar"
        android:layout_below="@id/buttonHolder"
        android:layout_marginTop="4dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/agree"
            android:text="Agree"
            android:background="#00ff00"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/decline"
            android:text="Decline"
            android:background="#ff00"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/drawButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show where you are hurt"
        android:layout_below="@id/topBar"
        android:background="@drawable/picture_btn"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:imeOptions="actionDone"
        android:background="@drawable/round_view"
        android:singleLine="true"
        android:textColor="#000"
        android:hint="Say something.."
        android:layout_marginTop="10dp"
        />

    <ScrollView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/helperTextMessage"
        android:layout_above="@+id/editText"
        android:layout_below="@id/drawButton"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/textexchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
